{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block search %}  
<form class="form-inline my-2 my-lg-0"style="padding-top:15px;">
    <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search"method="get" aria-label="Search">
    <button class="btn btn-light my-2 my-sm-0" type="submit">Search</button>
</form>
 {% endblock %}    
          
{% block body %}
    <h1>Utilisateurs</h1>
{% if resultats %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in resultats %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %} 
        {% else %}
        <p> Auncun r√©sultat</p>
        {% endif %}
        </tbody>
    </table>
    
    <a href="{{ path('app_admin_user_new') }}">Create new</a>
{% endblock %}
