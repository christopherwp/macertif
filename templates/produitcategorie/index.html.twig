{% extends 'base.html.twig' %}

{% block title %}Hello ProduitcategorieController!{% endblock %}

{% block body %}
<div class="mt-5 container">
<div class="row gap-5 d-flex justify-content-center">
{% for unprod in produit_cat %}
<div class="card col-4 " style="width: 18rem;">
  <img src="{{asset('img/') ~ unprod.img}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"style="height:40px;">{{unprod.titre}}</h5>
    <p class="mt-3 mb-3 card-text" style="height:40px;">{{unprod.description}}</p>
    <p class=" card-text" style="min-height:30px;">{{unprod.prix}} euros</p>
    <a href="{{path('app_cart_add', {'id': unprod.id }) }}" class="btn btn-secondary">Ajouter au panier</a>
  </div>
</div>
{% endfor %}
</div>
</div>
{% endblock %}
